<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+feed_detail_list_item/rest" android:layout_width="match_parent"
	android:layout_height="match_parent" >
	<ImageView android:id="@+feed_detail_list_item/is_read"
		android:layout_width="15dp" android:layout_height="15dp"
		android:layout_alignParentTop="true" android:src="@drawable/is_read"
		android:layout_marginLeft="10dp" android:layout_marginTop="5dp" />
	<ImageView android:id="@+feed_detail_list_item/starred"
		android:layout_width="30dp" android:layout_height="30dp"
		android:layout_alignParentBottom="true" android:layout_marginBottom="5dp"
		android:layout_below="@feed_detail_list_item/is_read"
		android:layout_marginTop="10dp" android:layout_marginLeft="2dp" />
	<TextView android:id="@+feed_detail_list_item/title"
		android:layout_marginLeft="10dp" android:layout_width="match_parent"
		android:layout_height="wrap_content" android:textAppearance="@style/feedTextStyle.Title"
		android:layout_toRightOf="@feed_detail_list_item/is_read" />
	<TextView android:id="@+feed_detail_list_item/pubDate"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_below="@feed_detail_list_item/title"
		android:layout_alignLeft="@feed_detail_list_item/title"
		android:textAppearance="@style/feedTextStyle.PubDate"
		android:layout_alignParentBottom="true" android:layout_marginBottom="5dp" />
	<TextView android:id="@+feed_detail_list_item/readMore"
		android:layout_below="@feed_detail_list_item/title"
		android:textAppearance="@style/feedTextStyle.ReadMore"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentRight="true" android:autoLink="web"
		android:text="@string/read_more" android:layout_marginRight="5dp"
		android:layout_alignParentBottom="true" android:layout_marginBottom="5dp" />
</RelativeLayout>
