<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<HorizontalScrollView android:id="@+feed_qa/scroller"
		android:layout_marginTop="16dip" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/quick_action"
		android:fadingEdgeLength="5dip" android:scrollbars="none">
		<LinearLayout android:id="@+feed_qa/actionViewLayout"
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:padding="5dp">
			<TextView android:id="@+feed_qa/facebook" android:layout_width="wrap_content" 
				android:layout_height="wrap_content" android:drawableLeft="@drawable/facebook"
				android:text="Post" android:gravity="center" android:textAppearance="@style/feedTextStyle.facebook"
				android:drawablePadding="2dp"/>
		</LinearLayout>
	</HorizontalScrollView>
	<ImageView android:id="@+feed_qa/arrow_up"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:src="@drawable/arrow_up" />
	<ImageView android:id="@+feed_qa/arrow_down"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_below="@feed_qa/scroller" android:layout_marginTop="-4dip"
		android:src="@drawable/arrow_down" />
</RelativeLayout>